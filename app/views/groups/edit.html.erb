<% provide(:title, "Edit Group") %>
<h1>Update <%= @group.title %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@group) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

  </div>
</div>